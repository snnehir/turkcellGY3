@model AuthorBook


<div class="card my-2">
    <img src="@Model.ImageUrl" class="img-fluid center-image" />
    <div class="card-body">
        <h4 class="card-title">@Model.Title</h4>
        <p class="card-title">@Model.CategoryName</p>
        <h5 class="card-text text-end">@Model.UnitPrice $</h5>
        <button class="btn btn-success basket w-100" data-id="@Model.Id">Add To Cart</button>
    </div>
</div>
