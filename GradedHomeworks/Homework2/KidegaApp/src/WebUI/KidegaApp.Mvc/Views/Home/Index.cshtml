@model PaginationBookViewModel
@{
    ViewData["Title"] = "Kidega Kitap";
    var columnCount = 0;
}

<div class="row m-4">
    @foreach (var book in Model.Books)
    {
        @if (columnCount != 0 && columnCount % 4 == 0)
        {
            @:</div><div class="row m-4">
        }      
        <div class="col-3">
           <partial name="_BookCard" model="book"/>
        </div>
          columnCount++;
    }
</div>

<!-- pagination -->

<div page-action="Index" page-model="@Model.PagingInfo"></div>

<!-- toast message -->

<div class="toast-container position-fixed bottom-0 end-0 p-3">
  <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">      
      <strong class="me-auto">Sepet Bilgisi</strong>  
      <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
    <div class="toast-body">
      
    </div>
  </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function(){
            
            $('.basket').on('click',function(){
                let id = $(this).data('id');
                console.log(id)
                $.ajax({
                    url:'/Shopping/AddBook/'+id,
                    type:'GET',
                    success:function(data){
                        console.log(data)
                        $('.toast-body').text(data.message);
                        alertify.success(data.message);
                        location = location
                    },
                    error: function(err){
                        console.log('error: ',error);
                    }
                });
            });
        });
    </script>
}