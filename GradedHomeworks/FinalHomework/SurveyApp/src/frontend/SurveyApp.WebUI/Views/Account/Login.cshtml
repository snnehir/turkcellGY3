@model SurveyApp.WebUI.Models.Requests.LoginRequestModel

@{
    ViewData["Title"] = "Login";
}

<h1>Welcome!</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-route-redirectUrl="@ViewBag.RedirectUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="error-message text-danger">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div class="form-group mt-2">
                <input type="submit" value="Login" class="btn btn-darkorange text-white" />
            </div>
        </form>
        <p class="mt-2">Don't have an account yet? <a asp-action="SignUp" asp-controller="Account">Sign Up</a></p>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}