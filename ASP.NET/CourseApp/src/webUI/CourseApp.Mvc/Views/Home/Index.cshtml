@model PaginationCourseViewModel
@{
    ViewData["Title"] = "Home Page";
    var columnCount = 0;
}

<div class="row m-4">
    @foreach (var courseDisplay in Model.Courses)
    {
        @if (columnCount != 0 && columnCount % 4 == 0)
        {
            @:</div><div class="row m-4">
        }      
        <div class="col-3">
           <partial name="_CourseDisplay" model="courseDisplay"/>
        </div>
          columnCount++;
    }
</div>
